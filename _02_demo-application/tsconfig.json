/*
* O arquivo tsconfig.json especifica as pastas de origem e saída 
* (src' e 'dist' respectivamente), e permite opções de compilação para verificação rigorosa da 
* sintaxe do nosso Typescript.
*/

{
    "compilerOptions": {
      "target": "ES2017",
      "module": "commonjs",
      "allowJs": true,
      "sourceMap": true,
      "outDir": "./dist/",
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "strictBindCallApply": true,
      "strictPropertyInitialization": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "./src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  